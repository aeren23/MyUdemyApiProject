@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <div>
        <label >Hakkımızda Başlık 1:</label>
        <input type="text" asp-for="Title1" class="form-control" />
        <br />
    </div>
    <div>
        <label >Hakkımızda Başlık 2:</label>
        <input type="text" asp-for="Title2" class="form-control" />
        <br />
    </div>
    <div>
        <label >İçerik:</label>
        <input type="text" asp-for="Content" class="form-control" />
        <br />
    </div>
    <div>
        <label >Personel Sayısı:</label>
        <input type="text" asp-for="StaffCount" class="form-control" />
        <br />
    </div>
    <div>
        <label >Oda Sayısı:</label>
        <input type="text" asp-for="RoomCount" class="form-control" />
        <br />
    </div>
    <div>
        <label>Müşteri Sayısı:</label>
        <input type="text" asp-for="CustomerCount" class="form-control" />
        <br />
    </div>
    <button class="btn btn-success">Hakkımızda Bilgisini Güncelle</button>
</form>



