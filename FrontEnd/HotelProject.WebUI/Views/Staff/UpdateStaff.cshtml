@using HotelProject.WebUI.Models.Staff;
@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="StaffID"/>
    <div>
        <label asp-for="Name">Personel Adı:</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
    </div>
    <div>
        <label asp-for="Title">Personel Ünvanı:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
    </div>
    <div>
        <label asp-for="SocialMedia1">Sosyal Medya 1:</label>
        <input type="text" asp-for="SocialMedia1" class="form-control" />
        <br />
    </div>
    <div>
        <label asp-for="SocialMedia2">Sosyal Medya 2:</label>
        <input type="text" asp-for="SocialMedia2" class="form-control" />
        <br />
    </div>
    <div>
        <label asp-for="SocialMedia3">Sosyal Medya 3:</label>
        <input type="text" asp-for="SocialMedia3" class="form-control" />
        <br />
    </div>
    <button class="btn btn-success">Personeli Güncelle</button>
</form>

